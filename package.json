{
  "name": "uniz-user-service",
  "version": "1.0.0",
  "description": "User Profile microservice for UniZ",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "vercel-build": "prisma generate",
    "postinstall": "if [ -f prisma/schema.prisma ]; then npx prisma generate; fi",
    "seed": "ts-node prisma/seed.ts",
    "data-reset": "npx prisma db push --force-reset && npm run seed",
    "deploy": "git add . && git commit -m \"deploy: user-service updates\" && git push origin main"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.19.1",
    "@types/multer": "^2.0.0",
    "axios": "^1.13.4",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.9.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "xlsx": "^0.18.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/ioredis": "^4.28.10",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.0.0",
    "prisma": "^5.19.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  }
}
